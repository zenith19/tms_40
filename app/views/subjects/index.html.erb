<div class="row">
  <h1 class="text-capitalize"><%= t '.list' %></h1>
  <br>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= t '.name' %></th>
        <th><%= t '.desc' %></th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.name%></td>
        <td><%= subject.description%></td>
        <td><%= link_to t('.edit_link'), edit_subject_path(subject) %></td>
        <td><%= link_to t('.delete_link'), subject_path(subject),
          method: :delete, data: {confirm: t('.delete_confirm')} %></td>
      </tr>
    <% end %>
  </table>
  <br>
  <%= link_to t('.create'), new_subject_path, class: "btn btn-primary" %>
</div>
