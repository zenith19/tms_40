<h1><%= t '.new_course' %></h1>
<%= form_for @course do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :start_date %>
  <%= f.date_field :start_date, class: 'datepicker', id: 'sd', readonly: true %>
    
  <%= f.label :end_date %>
  <%= f.date_field :end_date, class: 'datepicker', id: 'ed', readonly: true %>

  <script type="text/javascript">
    $(document).ready(function(){
      $('#sd').datepicker().on('changeDate', function(event) {
	    var start_date = $("#sd").val();
	    $('#ed').data('datepicker').setStartDate(start_date);
      });
      $('#ed').datepicker().on('changeDate', function(event) {
  	    var end_date = $("#ed").val();
  	    $('#sd').data('datepicker').setEndDate(end_date);
      });
    });
  </script>

  <%= f.submit t '.bt_create_new_course', class: "btn btn-primary btn-lg" %>
<% end %>
